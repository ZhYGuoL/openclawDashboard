# Postgres — uses system Postgres 17 on localhost
POSTGRES_USER=oclaw
POSTGRES_PASSWORD=oclaw
POSTGRES_DB=openclaw_dashboard
DATABASE_URL=postgresql+asyncpg://oclaw:oclaw@localhost:5432/openclaw_dashboard
DATABASE_URL_SYNC=postgresql://oclaw:oclaw@localhost:5432/openclaw_dashboard

# Redis (install via: brew install redis && brew services start redis)
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# OpenClaw — must be installed and configured on this machine
# See: https://docs.openclaw.ai/cli
OPENCLAW_BIN=openclaw
OPENCLAW_GATEWAY_URL=ws://127.0.0.1:18789
OPENCLAW_GATEWAY_TOKEN=
OPENCLAW_WORKSPACE=~/.openclaw/workspace
OPENCLAW_TIMEOUT_SECONDS=120
OPENCLAW_PROFILE=

# API
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=info
